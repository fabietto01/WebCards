@model WebCards.Models.Partite

@{
    ViewData["Title"] = "Partita";
    
}

<div class="text-center">
    <h2 >♠ Nuova partita ♠</h2>
    <br />
    <div>
        @using (Html.BeginForm("Index", "Game", FormMethod.Post))
        {
            <label>Inserisci numero giocatori</label>
            @Html.TextBoxFor(m => m.NumeroGiocatori)
            <br>
            <input type="submit" value="Create" />
        }
    </div>
    <br />
    <h2>♠ Continua partita ♠</h2>
    <br /> 
    <center>
        <table id="width50">
            @foreach (var pa in ViewData["partite"] as IQueryable<Partite>)
            {
                <tr>
                    <th>@pa.Datatime.ToShortDateString()</th>
                    <th>@pa.Rowguid</th>
                    <td>
                        @Html.ActionLink("Elimina", "Delete", new { id = pa.Rowguid })
                    </td>
                    <td>
                        @Html.ActionLink("Carica", "Load", new { id = pa.Rowguid })
                    </td>
                </tr>
            }
        </table>
    </center>
</div>








