@model WebCards.Models.Partite

@{
    ViewData["Title"] = "Game";
    
}

<div class="text-center">
    @using (Html.BeginForm("Index", "Game",  FormMethod.Post))
    {
        <label>crea un nuova partita</label>
        @Html.TextBoxFor(m => m.NumeroGiocatori)
        <br>
        <input type="submit"  value="creat"/>
    }
    

    <table>
        @foreach(var pa in ViewData["partite"] as IQueryable<Partite>)
        {
            <tr>
                <td>
                @pa.Rowguid
                </td>
                <td>
                @Html.ActionLink("Elimia", "Delate",  new {  id=pa.Rowguid  })
                </td>
            </tr>
        }
    </table>





</div>








