@model WebCards.Models.DrawTableCardModel

@{
    var partita = ViewData["partita"] as Partite;
    var player = ViewData["player"] as Giocatori;
}

<div>
    <body2>
        @using (Html.BeginForm(null, null, FormMethod.Post, new { action = $"/Game/{partita.Rowguid}/{player.Rowguid}/DrawTableCardModel" }))
        {
            <label>Prendi dal tavolo</label>
            @Html.DropDownListFor(m => m.Tavolo,
                                    new SelectList(partita.InTavolos),
                                    "carta-tavolo")
            <label>con</label>
            @Html.DropDownListFor(m => m.CartaScelta,
                                    new SelectList(player.Manos),
                                    "carta mano giocatore")
            <input type="submit" value="prendi carta">
        }
    </body2>
</div>
